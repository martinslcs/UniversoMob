@{
    ViewData["Title"] = "Cliente";
}
@{
    @model List<Cliente>

    <!DOCTYPE html>
    <html lang="pt-br">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewData["Title"]</title>

   
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body class="bg-light">

        <div class="container mt-4">
            <h2 class="text-center mb-4">Cadastro de Clientes</h2>

            <div class="card shadow p-4">
                <form action="/Cliente/Cadastrar" method="post">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Nome:</label>
                            <input type="text" name="Nome" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">CNPJ:</label>
                            <input type="text" name="CNPJ" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Data de Início do Contrato:</label>
                            <input type="date" name="InicioContrato" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Quantidade de Renovações:</label>
                            <input type="number" name="Renovacoes" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Usuários Ativos:</label>
                            <input type="number" name="UsuariosAtivos" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Tipo de Pagamento:</label>
                            <select name="TipoPagamento" class="form-select">
                                <option value="Medição">Medição</option>
                                <option value="Anual">Anual</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check mt-4">
                                <input type="checkbox" name="DispenserMachine" class="form-check-input" id="dispenserCheck" value="true" />
                                <label class="form-check-label" for="dispenserCheck">Possui Dispenser Machine?</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check mt-4">
                                <input type="checkbox" name="PossuiIntegracao" class="form-check-input" id="integracaoCheck" value="true" />
                                <label class="form-check-label" for="integracaoCheck">Possui Integração?</label>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary">Cadastrar</button>
                    </div>
                </form>
            </div>

            <h2 class="text-center mt-5">Clientes Cadastrados</h2>

            <div class="table-responsive">
                <table class="table table-bordered table-striped mt-3">
                    <thead class="table-dark">
                        <tr>
                            <th>Nome</th>
                            <th>CNPJ</th>
                            <th>Dispenser</th>
                            <th>Integração</th>
                            <th>Início Contrato</th>
                            <th>Renovações</th>
                            <th>Usuários</th>
                            <th>Pagamento</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var cliente in Model)
                            {
                                <tr>
                                    <td>@cliente.Nome</td>
                                    <td>@cliente.CNPJ</td>
                                    <td>@(cliente.DispenserMachine ? "Sim" : "Não")</td>
                                    <td>@(cliente.PossuiIntegracao ? "Sim" : "Não")</td>
                                    <td>@cliente.InicioContrato.ToShortDateString()</td>
                                    <td>@cliente.Renovacoes</td>
                                    <td>@cliente.UsuariosAtivos</td>
                                    <td>@cliente.TipoPagamento</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center">Nenhum cliente cadastrado.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>


        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    </body>
    </html>
    }